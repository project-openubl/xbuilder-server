<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openublpe</groupId>
    <artifactId>xml-builder</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <name>XML Builder :: Parent</name>
    <packaging>pom</packaging>

    <properties>
        <surefire-plugin.version>2.22.2</surefire-plugin.version>

        <quarkus.version>1.0.1.Final</quarkus.version>
        <jandex.version>1.0.6</jandex.version>
        <camel.quarkus.version>0.2.0</camel.quarkus.version>
        <jacoco.version>0.8.5</jacoco.version>

        <freemarker.version>2.3.28</freemarker.version>
        <xmlunit.version>1.6</xmlunit.version>
        <sunat-web-services.version>1.3.4.Final</sunat-web-services.version>
        <junit4.version>4.12</junit4.version>

        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <compiler-plugin.version>3.8.1</compiler-plugin.version>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.parameters>true</maven.compiler.parameters>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--Quarkus-->
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-bom</artifactId>
                <version>${quarkus.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!--XML Utils-->
            <dependency>
                <groupId>com.helger</groupId>
                <artifactId>ph-ubl-parent-pom</artifactId>
                <version>6.2.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.openublpe</groupId>
                <artifactId>xml-builder-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.openublpe</groupId>
                <artifactId>quarkus-freemarker</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.openublpe</groupId>
                <artifactId>quarkus-freemarker-deployment</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <modules>
        <module>core</module>
        <module>services</module>
        <module>extensions</module>
    </modules>
</project>
